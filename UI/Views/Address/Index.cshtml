@using Dtos;
@model AddressListDto
@{
    ViewData["Title"] = "Index";
}


<a asp-action="Add" asp-controller="Address"><button class="btn btn-primary">Ekle</button></a>
<table class="table table-bordered">

    <thead>
        <tr>
            <th scope="col">Adı</th>
            <th scope="col">İl</th>
            <th scope="col">İlçe</th>
            <th scope="col">Posta Kodu</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Addresses.Count == 0)
        {
            <tr>

                <td>Veri bulunamadı.</td>

            </tr>
        }
        else
        {

            @foreach (var item in Model.Addresses)
            {

                <tr>
                    <td>@item.AddressName</td>
                    <td>@item.City</td>
                    <td>@item.County</td>
                    <td>@item.ZipCode</td>
                    <td><a asp-action="Delete" asp-controller="Address" asp-route-id="@item.Id"><button class="btn-danger">Sil </button></a> </td>
                </tr>

            }
        }
    </tbody>

</table>