@using Dtos;
@model CustomerListDto
@{
    ViewData["Title"] = "Customer List Page";
}

<a  asp-action="Add" asp-controller="Customer"><button class="btn btn-primary">Ekle</button></a>
<table class="table table-bordered">
    
    <thead>
        <tr>
            <th scope="col">Adı</th>
            <th scope="col">E-Posta</th>
            <th scope="col">Telefon</th>
            <th scope="col">Adres</th>
            <th scope="col">Şehir</th>
            <th scope="col">İlçe</th>
            <th scope="col">Düzenle</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Customers.Count==0)
        {
             <tr>
           
            <td>Veri bulunamadı.</td>
            
        </tr>
        }
        else
        {

            @foreach (var item in Model.Customers)
            {

                <tr>    
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Address.AddressName</td>
                    <td>@item.Address.City</td>
                    <td>@item.Address.County</td>
                    <td><a asp-action="Edit" asp-controller="Customer" asp-route-id="@item.Id"><button class="btn-warning">Düzenle </button></a> </td>
                    <td><a asp-action="Delete" asp-controller="Customer" asp-route-id="@item.Id"><button class="btn-danger">Sil </button></a> </td>
                   
                </tr>
            }
        }
    </tbody>
   
</table>